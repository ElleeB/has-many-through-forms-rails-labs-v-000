<h2> <%= @post.title %> </h2>

<!-- Categories -->

Categories:
<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>
<br><br>
<hr>
Content: <%= @post.content %><br>

<!-- USERS -->

<hr>
<h4>Users who have commented:</h4>

<% @post.users.uniq.each do |user| %>
  <%= link_to user.username, user %>
<% end %>

<!-- COMMENTS -->

<hr>
<h4>Comments:</h4>
  <% @post.comments.each do |comment| %>
    <h4> <%= comment.user.username %> says: </h4>
    <%= comment.content %>
  <% end %>
<hr>

<!-- ADD A COMMENT -->

<%= fields_for :comment do |comment| %>
  <%= comment.label :content %> <br>
  <%= comment.text_area :content %>
  <br><br>

<!-- Unable to find visible field "comment_user_attributes_username"  -->

<!-- CHOOSE USER -->
  <%= comment.label :user_username %>
  <br>
  <%= comment.text_field :user_id, list: 'user_id' %>
  <br>
  <datalist id="user_id">
    <% User.all.each do |user| %>
      <option value="<%= user.username %>"></option>
    <% end %>
  </datalist><br>

  <!-- NEW USER -->
  <%= comment.submit "Create Comment" %>
<% end %>
